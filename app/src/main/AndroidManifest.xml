            android:exported="false" />
        <activity
            android:name=".CreateCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".CreateProjects"
            android:exported="false"
